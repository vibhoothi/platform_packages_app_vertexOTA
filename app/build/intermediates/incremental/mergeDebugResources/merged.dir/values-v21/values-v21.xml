<?xml version="1.0" encoding="utf-8"?>
<resources>
    <string-array name="theme_entries">
        <item>@string/theme_dark</item>
        <item>@string/theme_light</item>
    </string-array>
    <string-array name="theme_values" translatable="false">
        <item>"2"</item>
        <item>"0"</item>
    </string-array>
    <color name="accent_material_dark">@color/material_deep_teal_200</color>
    <color name="accent_material_light">@color/material_deep_teal_500</color>
    <color name="card_background_material_dark">@color/material_blue_grey_800</color>
    <color name="card_background_material_light">@color/white</color>
    <color name="material_background_dark">#1f292f</color>
    <color name="material_background_light">@color/white</color>
    <color name="material_blue_grey_800">#ff37474f</color>
    <color name="material_blue_grey_900">#ff2d2d2d</color>
    <color name="material_blue_grey_950">#ff242424</color>
    <color name="material_cyan_500">#ff00bcd4</color>
    <color name="material_deep_teal_200">#ff5e97f6</color>
    <color name="material_deep_teal_500">#ff4285f4</color>
    <color name="material_light_green_200">#ff5e97f6</color>
    <color name="material_light_green_500">#ff4285f4</color>
    <color name="material_primary">@color/material_blue_grey_900</color>
    <color name="material_primary_dark">@color/material_blue_grey_950</color>
    <color name="material_red_200">#ffef9a9a</color>
    <color name="material_red_500">#fff44336</color>
    <color name="primary_text_material_dark">#ffffffff</color>
    <color name="primary_text_material_light">#de000000</color>
    <color name="ripple_material_dark">#40ffffff</color>
    <color name="ripple_material_light">#40000000</color>
    <color name="secondary_text_material_dark">#b3ffffff</color>
    <color name="secondary_text_material_light">#8a000000</color>
    <declare-styleable name="Theme.Ragnar">
        <attr format="color" name="colorPrimary"/>
        <attr format="color" name="colorPrimaryDark"/>
        <attr format="reference" name="menuTheme"/>
        <attr format="reference" name="backgroundRippleSelector"/>
        <attr format="color" name="materialAccent"/>
    </declare-styleable>
    <dimen name="card_view_radius">3dp</dimen>
    <dimen name="shadow_height">2dp</dimen>
    <style name="MainListElement">
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/backgroundRippleSelector</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>
    <style name="Theme.RagnarDark" parent="@android:Theme.Material">

        <!-- Styleables -->
        <item name="noUpdateAvailable">@color/material_red_500</item>
        <item name="updateAvailable">@color/material_light_green_500</item>
        <item name="helpIcon">@drawable/ic_about_dark</item>
        <item name="settingsIcon">@drawable/ic_settings_dark</item>
        <item name="changelogIcon">@drawable/ic_changelog</item>
        <item name="downloadIcon">@drawable/drawable_download</item>
        <item name="browserIcon">@drawable/drawable_website</item>
        <item name="donateIcon">@drawable/drawable_donate</item>
        <item name="checkIcon">@drawable/drawable_check</item>
        <item name="addonsIcon">@drawable/drawable_addon</item>
        <item name="separator">@color/separator_dark</item>
        <item name="backgroundRippleSelector">@drawable/ripple_selector_dark</item>
        <item name="proRibbon">@drawable/pro_ribbon_dark</item>

        <!-- Main theme colors -->
        <item name="android:colorPrimary">@color/material_primary</item>
        <item name="android:colorPrimaryDark">@color/material_primary_dark</item>
        <item name="colorPrimary">@color/material_primary</item>
        <item name="colorPrimaryDark">@color/material_primary_dark</item>
        <item name="android:colorAccent">@color/accent_material_dark</item>
        <item name="android:windowBackground">@drawable/material_background_dark</item>
        <item name="cardBackground">@color/card_background_material_dark</item>
        <item name="textColorPrimary">@color/primary_text_material_dark</item>
        <item name="textColorSecondary">@color/secondary_text_material_dark</item>
        <item name="materialAccent">@color/accent_material_dark</item>
        <item name="cardStyle">@style/CardStyle.Dark</item>
        <item name="android:windowNoTitle">true</item>
        <!-- We will be using the toolbar so no need to show ActionBar -->
        <item name="android:windowActionBar">false</item>
    </style>
    <style name="Theme.RagnarDark.Settings" parent="Theme.RagnarDark">
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowActionBar">true</item>
    </style>
    <style name="Theme.RagnarLight" parent="@android:Theme.Material.Light">

        <!-- Styleables -->
        <item name="noUpdateAvailable">@color/material_red_500</item>
        <item name="updateAvailable">@color/material_light_green_500</item>
        <item name="helpIcon">@drawable/ic_about_dark</item>
        <item name="settingsIcon">@drawable/ic_settings_dark</item>
        <item name="changelogIcon">@drawable/ic_changelog</item>
        <item name="downloadIcon">@drawable/drawable_download</item>
        <item name="browserIcon">@drawable/drawable_website</item>
        <item name="donateIcon">@drawable/drawable_donate</item>
        <item name="checkIcon">@drawable/drawable_check</item>
        <item name="addonsIcon">@drawable/drawable_addon</item>
        <item name="separator">@color/separator_light</item>
        <item name="backgroundRippleSelector">@drawable/ripple_selector_light</item>
        <item name="proRibbon">@drawable/pro_ribbon_light</item>

        <!-- Main theme colors -->
        <item name="android:colorPrimary">@color/material_primary</item>
        <item name="android:colorPrimaryDark">@color/material_primary_dark</item>
        <item name="android:colorAccent">@color/accent_material_light</item>
        <item name="cardBackground">@color/card_background_material_light</item>
        <item name="cardStyle">@style/CardStyle.Light</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="textColorPrimary">@color/primary_text_material_light</item>
        <item name="textColorSecondary">@color/secondary_text_material_light</item>
        <item name="materialAccent">@color/accent_material_light</item>
    </style>
    <style name="Theme.RagnarLight.Settings" parent="@android:Theme.Material.Settings">
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowActionBar">true</item>
    </style>
</resources>